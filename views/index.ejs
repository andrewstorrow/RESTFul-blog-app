<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%=blog.image%>">
        <div><%=blog.created%></div>
        <p><%=blog.body.substring(0,100)%>... <a href="/blogs/<%= blog._id %>">Read More</a></p>
        
    </div>
<% }); %>

